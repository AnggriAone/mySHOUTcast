<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="HardcodedText" >

    <TextView
        android:id="@+station_list_item/name"
        style="@android:style/TextAppearance.Medium"
        android:textStyle="bold"
        android:textColor="#399bc9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Radio Blah" />

    <TextView
        android:id="@+station_list_item/listeners"
        style="@android:style/TextAppearance.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#777777" />

    <TextView
        android:id="@+station_list_item/bitrate"
        style="@android:style/TextAppearance.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#111111" />

    <TextView
        android:id="@+station_list_item/type"
        style="@android:style/TextAppearance.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF0000" />

    <TextView
        android:id="@+station_list_item/genre"
        style="@android:style/TextAppearance.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:textColor="#0000FF" />

</LinearLayout>